<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.elife.feature.mapper.BlockMapper">

    <resultMap type="Block" id="BlockResult">
        <result property="userId"    column="user_id"    />
        <result property="targetId"    column="target_id"    />
    </resultMap>

    <sql id="selectBlockVo">
        select user_id, target_id from fea_block
    </sql>

    <select id="selectBlockList" parameterType="Block" resultMap="BlockResult">
        <include refid="selectBlockVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="targetId != null "> and target_id = #{targetId}</if>
        </where>
    </select>

    <select id="selectBlockByUserId" parameterType="Long" resultMap="BlockResult">
        <include refid="selectBlockVo"/>
        where user_id = #{userId}
    </select>

    <insert id="insertBlock" parameterType="Block">
        insert into fea_block
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="targetId != null">target_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="targetId != null">#{targetId},</if>
        </trim>
    </insert>

    <update id="updateBlock" parameterType="Block">
        update fea_block
        <trim prefix="SET" suffixOverrides=",">
            <if test="targetId != null">target_id = #{targetId},</if>
        </trim>
        where user_id = #{userId}
    </update>

    <delete id="deleteBlockByUserId" parameterType="Long">
        delete from fea_block where user_id = #{userId}
    </delete>

    <delete id="deleteBlockByUserIds" parameterType="String">
        delete from fea_block where user_id in
        <foreach item="userId" collection="array" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>
</mapper>